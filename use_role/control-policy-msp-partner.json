{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:RebootInstances",
                "ec2:*SecurityGroup*",
                "ec2:Describe*",
                "ec2:CreateImage",
                "ec2:AllocateAddress",
                "ec2:RunInstances",
                "ec2:AssignPrivateIpAddresses",
                "ec2:AssociateAddress",
                "ec2:AttachNetworkInterface",
                "ec2:AttachVolume",
                "ec2:CopyImage",
                "ec2:CopySnapshot",
                "ec2:CreateNetworkInterface",
                "ec2:CreateSnapshot",
                "ec2:CreateTags",
                "ec2:CreateVolume",
                "ec2:DeleteSnapshot",
                "ec2:DeleteTags",
                "ec2:DeregisterImage",
                "ec2:RegisterImage",
                "ec2:ReportInstanceStatus",
                "ec2:ModifyInstanceAttribute",
                "ec2:ModifyNetworkInterfaceAttribute",
                "ec2:ModifyVolumeAttribute",
                "rds:Describe*",
                "rds:CreateDBInstance",
                "rds:RebootDBInstance",
                "rds:ModifyDBInstance",
                "rds:ModifyDBCluster", 
                "rds:*SecurityGroup*",
                "rds:CreateDBSnapshot",
                "rds:AddTagsToResource",
                "rds:CopyDBSnapshot",
                "rds:DeleteDBSnapshot",
                "rds:ListTagsForResource",
                "rds:RemoveTagsFromResource",
                "sqs:DeleteMessage",
                "sqs:GetQueueUrl",
                "sqs:ListQueues",
                "sqs:ReceiveMessage",
                "sqs:SendMessage",
                "elasticloadbalancing:*",
                "cloudwatch:*",
                "ses:Get*",
                "ses:List*",
                "cloudtrail:GetTrailStatus",
                "cloudtrail:DescribeTrails",
                "cloudtrail:LookupEvents"
            ],
            "Resource": "*"
        }
    ]
}
